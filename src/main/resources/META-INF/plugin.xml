<idea-plugin>
    <id>org.example.plug</id>
    <name>Test</name>
    <vendor email="support@yourcompan.com">Test</vendor>
    <description>description description description description description</description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection language="JAVA"
                         displayName="Test insp"
                         groupName="Test"
                         enabledByDefault="true"
                         implementationClass="StepsInspection">

        </localInspection>
    </extensions>

    <actions>
        <action class="TTest" id="helloworld" text="Hello world">
            <add-to-group group-id="ToolsMenu" anchor="first"></add-to-group>
        </action>
        <action id="Acttion" class="Acttion" text="Hello kotlin" description="descr">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>